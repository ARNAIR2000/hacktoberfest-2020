def title_case(name):
    size=len(name)
    a=""
    for i in range(size):
        if name[i]==" " or name[i]==".":
            name[i+1]=name[i+1].upper()
    return a.join(name)
name="the boy is playing"
# a=""
name_list=list(name)
name_list[0]=name_list[0].upper()
b=title_case(name_list)
print(b)
